# Changing window focus
shift - j : yabai -m window --focus south
shift - k : yabai -m window --focus north
shift - h : yabai -m window --focus west
shift - l : yabai -m window --focus east

# Change focus between external displays
shift - s: yabai -m display --focus north
shift - d: yabai -m display --focus east

# Modidying the layout
shift - r : yabai -m space --rotate 270
shift - y : yabai -m space --mirror x-axis
shift - x : yabai -m space --mirror y-axis

# Toggle tilling
shift - t : yabai -m window --toggle float --grid 8:8:2:2:4:4

# Resize windows
shift - m : yabai -m window --toggle zoom-fullscreen
shift - e : yabai -m space --balance

# Move windows
cmd + shift - h : yabai -m window --swap west
cmd + shift - j : yabai -m window --swap south
cmd + shift - k : yabai -m window --swap north
cmd + shift - l : yabai -m window --swap east

# Move windows + split
ctrl + shift - h : yabai -m window --warp west
ctrl + shift - j : yabai -m window --warp south 
ctrl + shift - k : yabai -m window --warp north
ctrl + shift - l : yabai -m window --warp east 

# Move windows to previous and next space
cmd + shift - left : yabai -m window --space prev
cmd + shift - right : yabai -m window --space next

# Move window to space 
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6
cmd + shift - 7 : yabai -m window --space 7
cmd + shift - 8 : yabai -m window --space 8
cmd + shift - 9 : yabai -m window --space 9

# Create/destroy space
cmd + shift - n : yabai -m space --create
cmd + shift - d : yabai -m space --destroy

# Move through spaces
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9

# Screenshot
cmd + shift - s : open /System/Applications/Utilities/Screenshot.app
